    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug (QEMU gdb)",
            "type": "gdb",
            "request": "attach",
            "target": ":1234",
            "cwd": "${workspaceRoot}",
            "valuesFormatting": "parseText",

            "executable": "./target/thumbv7m-none-eabi/debug/examples/usage_outline",
            "remote": true,
            "gdbpath": "C:/Program Files (x86)/GNU Tools ARM Embedded/8 2019-q3-update/bin/arm-none-eabi-gdb.exe",
            "autorun": [
                "interrupt",
                "load",
                "break main",
                "monitor system_reset"
            ]
        }
    ]
}